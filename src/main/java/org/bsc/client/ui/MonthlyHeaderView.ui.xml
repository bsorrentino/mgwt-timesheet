<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.googlecode.mgwt.ui.client.widget">

	<ui:style field='cal' src="MonthlyHeader.css"/>    
	
	<ui:style>
		.container {
		
			border: medium;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.container}">
	
		<div class="{cal.holder}">
	    	<div class="{cal.month} {cal.yellow}">
	        	<p ui:field="lblMonthName" >Sept</p>
		    </div>
		    <div class="{cal.day}">
	    	    <p ui:field="lblDayOrdinal" >31</p>
	    	</div>
		</div>
		
		<p class="{cal.day_of_week}" ui:field="lblDayName" >Wednesday</p>
		<p class="{cal.hours}" ui:field="lblHours" >8</p>
	</g:HTMLPanel>
</ui:UiBinder> 