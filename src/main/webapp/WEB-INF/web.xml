<?xml version="1.0" encoding="UTF-8"?>

<web-app>
  

<!-- 
==========================
HTTP PROXY
==========================
-->
<servlet>
	<servlet-name>HttpProxy</servlet-name>
	<servlet-class>it.softphone.commons.util.web.proxy.HttpProxyServlet</servlet-class>
	
	<init-param>
		<param-name>host</param-name>
		<param-value>http://sabina-soul.appspot.com/sabina</param-value>
	</init-param>
	
	<init-param>		
		<param-name>host2</param-name>
		<param-value>http://localhost:81/sabina</param-value>
	</init-param>	
	<init-param>
		<param-name>uri</param-name>
		<param-value>/timesheet</param-value>
	</init-param>
	
	<init-param>
		<param-name>timeout</param-name>
		<param-value>15000</param-value><!-- MILLISECONS -->
	</init-param>

</servlet>

<servlet-mapping> 
  <servlet-name>HttpProxy</servlet-name> 
  <url-pattern>/timesheet/rest/service/*</url-pattern> 
</servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
